<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:id="@+id/mainScrollView"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:id="@+id/americasButton"
            android:background="#ff00741e"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Arkham - San Francisco - Buenos Aires"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/europeButton"
            android:background="#ffc96900"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="London - Rome - Istanbul"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/asiaButton"
            android:background="#ff5a0e8a"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Shanghai - Tokyo - Sydney"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/antWestButton"
            android:background="#ffb897bb"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="City of the Elder Things - Plateau of Leng - Snowy Mountains"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/antEastButton"
            android:background="#a1746100"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Frozen Waste - Lake Camp - Miskatonic Outpost"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/africaButton"
            android:background="#7b5000"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="The Sahara Desert - Tel el-Amarna - The Nile River"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/egyptButton"
            android:background="#b60101"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Alexandria - The Bent Pyramid - Cairo"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dreamlandsButton"
            android:background="#8caa2f"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="CelephaÃ¯s - Ulthar - Dylath-Leen"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/generalButton"
            android:background="#5e000000"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="City - Wilderness - Sea"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/gateButton"
            android:background="#fe00cd5b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Gate"
            android:height="75dp"
            android:onClick="drawCard"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/expLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:weightSum="6">
            <Button
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:id="@+id/expeditionButton"
                android:background="#ff1a0077"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Expedition [LOCATION]"
                android:height="75dp"
                android:layout_weight="4"
                android:onClick="drawCard"/>
            <Button
                android:textSize="20dp"
                android:id="@+id/removeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Remove"
                android:height="75dp"
                android:singleLine="true"
                android:layout_weight="2"
                android:onClick="removeExpedition"/>
        </LinearLayout>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/mysticRuinsButton"
            android:background="#a21d00f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mystic Ruins [LOCATION]"
            android:height="75dp"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dreamQuestButton"
            android:background="#5e30ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dream-Quest [LOCATION]"
            android:height="75dp"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:id="@+id/researchButton"
            android:background="#ff000000"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:text="Research"
            android:height="75dp"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:id="@+id/antResearchButton"
            android:background="#d98b4512"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Antarctica Research"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:id="@+id/special1Button"
            android:background="#d9578b84"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:text="Special-1"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:id="@+id/special2Button"
            android:background="#d92c8b5e"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Special-2"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:id="@+id/special3Button"
            android:background="#d9075e35"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Special-3"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:id="@+id/disasterButton"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:text="Disaster"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:id="@+id/devastationButton"
            android:background="@android:color/holo_red_light"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Devastation"
            android:onClick="drawCard"/>
        <Button
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:id="@+id/discardButton"
            android:background="#ff3d4876"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:text="Discard"
            android:onClick="drawCard"/>
    </LinearLayout>
</ScrollView>
