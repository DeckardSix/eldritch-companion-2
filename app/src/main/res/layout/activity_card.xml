<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/cardScroll"
        android:layout_width="wrap_content"
        android:layout_height="700dp"
        android:layout_above="@+id/idBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:text="TOP NAME"
                android:textColor="#ff000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/topEncounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="This is where the top encounter goes"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/middleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="bottom|center_horizontal"
                android:text="MIDDLE NAME"
                android:textColor="#ff000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/middleEncounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="MIDDLE ENCOUNTER"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/bottomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="bottom|center_horizontal"
                android:text="BOTTOM NAME"
                android:textColor="#ff000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/bottomEncounter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="BOTTOM ENCOUNTER"
                android:textSize="12dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:textSize="10dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:id="@+id/idBox"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:text="ID"
        android:layout_alignRight="@+id/cardScroll"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
