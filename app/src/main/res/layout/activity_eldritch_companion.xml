<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:id="@+id/mainScrollView"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:id="@+id/americasButton"
                android:background="#80007420"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Arkham - San Francisco - Buenos Aires"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/europeButton"
                android:background="#80c96900"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="London - Rome - Istanbul"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/asiaButton"
                android:background="#805a0e8a"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Shanghai - Tokyo - Sydney"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/antWestButton"
                android:background="#80b897bb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="City of the Elder Things - Plateau of Leng - Snowy Mountains"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/antEastButton"
                android:background="#80746100"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Frozen Waste - Lake Camp - Miskatonic Outpost"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/africaButton"
                android:background="#807b5000"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="The Sahara Desert - Tel el-Amarna - The Nile River"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/egyptButton"
                android:background="#80b60101"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Alexandria - The Bent Pyramid - Cairo"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/dreamlandsButton"
                android:background="#808caa2f"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="CelephaÃ¯s - Ulthar - Dylath-Leen"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/generalButton"
                android:background="#5e000000"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="City - Wilderness - Sea"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/gateButton"
                android:background="#8000cd5b"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Gate"
                android:height="75dp"
                android:onClick="drawCard"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/expLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="6">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="4">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/neighbourhood_200x800"
                    android:scaleType="fitXY"
                    android:alpha="0.5"/>
                <Button
                    android:textSize="15dp"
                    android:textColor="#ffffffff"
                    android:id="@+id/expeditionButton"
                    android:background="#801a0077"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Expedition [LOCATION]"
                    android:height="75dp"
                    android:onClick="drawCard"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/neighbourhood_200x800"
                    android:scaleType="fitXY"
                    android:alpha="0.5"/>
                <Button
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:id="@+id/removeButton"
                    android:background="#80cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Remove"
                    android:height="75dp"
                    android:singleLine="true"
                    android:onClick="removeExpedition"/>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/mysticRuinsButton"
                android:background="#801d00f2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Mystic Ruins [LOCATION]"
                android:height="75dp"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/dreamQuestButton"
                android:background="#805e30ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dream-Quest [LOCATION]"
                android:height="50dp"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:id="@+id/researchButton"
                android:background="#80000000"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Research"
                android:height="75dp"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:id="@+id/antResearchButton"
                android:background="#808b4512"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Antarctica Research"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:id="@+id/special1Button"
                android:background="#80578b84"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Special-1"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:id="@+id/special2Button"
                android:background="#802c8b5e"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Special-2"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:id="@+id/special3Button"
                android:background="#80075e35"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Special-3"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:id="@+id/disasterButton"
                android:background="#8033b5e5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Disaster"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:id="@+id/devastationButton"
                android:background="#80ff4444"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Devastation"
                android:onClick="drawCard"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/neighbourhood_200x800"
                android:scaleType="fitXY"
                android:alpha="0.5"/>
            <Button
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:id="@+id/discardButton"
                android:background="#803d4876"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Discard"
                android:onClick="drawCard"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
